//--------------------------------------------------
//          TREE
//--------------------------------------------------
.tree {
}

.tree .gutter {
	width: 50px;
	padding-top: 10px;
	float: right;
}

.tree .trunk {
	border:1px solid black;
}

.tree .header {
	font-weight: bold;
	background-color: #A0d5f7;
	padding: 10px;
	height: 50px;

}

.tree .trunk .branch {
	padding: 0px 0px 10px 80px;
	font-weight: normal;
}


